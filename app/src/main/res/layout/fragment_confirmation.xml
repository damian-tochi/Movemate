<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/explosiveRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFragmentBackground"
    android:padding="26dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:animateLayoutChanges="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:contentDescription="TODO"
            android:src="@drawable/logo"
            android:transitionName="sharedImage" />

        <ImageView
            android:id="@+id/explosiveImage"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginBottom="24dp"
            android:contentDescription="box"
            android:src="@drawable/ic_box"
            android:transitionName="sharedImage" />

        <TextView
            android:id="@+id/explosiveText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Total Estimated Amount"
            android:textColor="@color/colorTextPrimary"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:textStyle="" />

        <TextView
            android:id="@+id/amountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="$0"
            android:textColor="@color/colorGreen"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/categoriesDescribeTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="24dp"
            android:text="This amount is estimated this will vary\nif you change your location or weight"
            android:textAlignment="center"
            android:textColor="@color/colorTextSecondary" />

        <Button
            android:id="@+id/btnReturnHome"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/orange_button"
            android:elevation="1dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="4dp"
            android:text="@string/back_to_home"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:backgroundTint="@null" />
    </LinearLayout>
</FrameLayout>
