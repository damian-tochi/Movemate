<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    card_view:cardCornerRadius="24dp"
    card_view:cardElevation="2dp"
    android:layout_margin="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <ImageView
            android:id="@+id/search_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:contentDescription="search icon"
            android:src="@drawable/ic_search"
            android:layout_alignParentStart="true"
            card_view:tint="@color/colorTextSecondary" />

        <ImageView
            android:id="@+id/filter_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:contentDescription="filter search"
            android:src="@drawable/ic_filter"
            card_view:tint="@color/colorOrange" />


        <EditText
            android:id="@+id/searchInput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/search_icon"
            android:layout_toStartOf="@id/filter_icon"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:autofillHints="Enter the recipient number..."
            android:background="@android:color/transparent"
            android:hint="Enter the recipient number..."
            android:textColor="@android:color/black"
            android:textColorHint="@color/colorTextHint"
            android:inputType="text"
            android:maxLines="1"
            android:focusable="true"
            android:focusableInTouchMode="true"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
